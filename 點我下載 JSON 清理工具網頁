  <script>
    function processFile() {
      const input = document.getElementById('fileInput');
      const status = document.getElementById('status');

      if (!input.files[0]) {
        alert('è«‹å…ˆé¸æ“‡ä¸€å€‹ JSON æª”æ¡ˆ');
        return;
      }

      const reader = new FileReader();
      reader.onload = function(e) {
        try {
          const data = JSON.parse(e.target.result);
          if (data.history && Array.isArray(data.history)) {
            data.history = data.history.filter(item => item.isHidden !== true);
          }
          const cleaned = JSON.stringify(data, null, 2);
          const blob = new Blob([cleaned], { type: "application/json" });
          const url = URL.createObjectURL(blob);
          const a = document.createElement("a");
          a.href = url;
          a.download = "cleaned.json";
          a.click();
          status.textContent = "âœ… è™•ç†å®Œæˆï¼Œå·²ä¸‹è¼‰ä¹¾æ·¨ç‰ˆæœ¬ï¼";
        } catch (err) {
          alert("âš ï¸ JSON è§£æéŒ¯èª¤ï¼Œè«‹ç¢ºèªæª”æ¡ˆæ ¼å¼æ­£ç¢º");
        }
      };
      reader.readAsText(input.files[0]);
    }
  </script>
